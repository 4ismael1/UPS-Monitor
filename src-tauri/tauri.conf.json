{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "UPS Monitor",
  "version": "1.0.0",
  "identifier": "com.upsmonitor.pro",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "UPS Monitor",
        "width": 1220,
        "height": 700,
        "minWidth": 1220,
        "minHeight": 700,
        "resizable": false,
        "maximizable": false,
        "minimizable": true,
        "closable": true,
        "center": true,
        "decorations": false,
        "transparent": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self' tauri: localhost; img-src 'self' asset: data: blob:; style-src 'self' 'unsafe-inline'; script-src 'self'; connect-src 'self' ws: http://localhost:5173 tauri:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "nsis",
    "windows": {
      "webviewInstallMode": {
        "type": "offlineInstaller"
      },
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "displayLanguageSelector": false
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
